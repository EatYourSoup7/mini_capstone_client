<h1>Product Edit Form</h1>

<%= form_tag "/client/products/#{ @product["id"] }", method: :patch do %>
  <div>
    Name: <input type="text" name="name" value="<%= @product["name"] %>">
  </div>
  <br>
  <div>
    Description: <input type="text" name="description" value="<%= @product["description"] %>">
  </div>
  <br>
  <div>
    Price: <input type="text" name="price" value="<%= @product["price"] %>">
  </div>
  <br>
  <div>
    Image URL: <input type="text" name="image_url" value="<%= @product["image_url"] %>">
  </div>
  <br>
  <div>
    Supplier ID: <input type="text" name="supplier_id" value="<%= @product["supplier_id"] %>">
  </div>
  <input type="submit" value="Update Product">
<% end %>